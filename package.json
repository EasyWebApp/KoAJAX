{
    "name": "koajax",
    "version": "0.8.3",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "HTTP Client based on Koa-like middlewares",
    "keywords": [
        "http",
        "request",
        "client",
        "ajax",
        "koa",
        "middleware"
    ],
    "homepage": "https://web-cell.dev/KoAJAX/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/KoAJAX.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/KoAJAX/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "dependencies": {
        "@swc/helpers": "^0.4.11",
        "iterable-observer": "^1.0.0-rc.1",
        "regenerator-runtime": "^0.13.9",
        "web-utility": "^3.9.2"
    },
    "peerDependencies": {
        "jsdom": "^20.0.0"
    },
    "devDependencies": {
        "@parcel/packager-ts": "~2.6.2",
        "@parcel/transformer-typescript-types": "~2.6.2",
        "@types/core-js": "^2.5.5",
        "@types/jest": "^29.0.0",
        "@types/jsdom": "^20.0.0",
        "@types/node": "^14.18.27",
        "core-js": "^3.25.0",
        "cross-env": "^7.0.3",
        "husky": "^8.0.1",
        "jest": "^29.0.2",
        "jest-environment-jsdom": "^29.0.2",
        "jsdom": "^20.0.0",
        "lint-staged": "^13.0.3",
        "open-cli": "^7.0.1",
        "parcel": "~2.6.2",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.8",
        "typedoc": "^0.23.14",
        "typedoc-plugin-mdn-links": "^2.0.0",
        "typescript": "~4.7.4"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,ts,json,yml}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom"
    },
    "browserslist": "> 0.5%, last 2 versions, not dead, IE 11",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged && jest",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "rm -rf dist/  &&  parcel build  &&  npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
