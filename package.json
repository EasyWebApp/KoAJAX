{
    "name": "koajax",
    "version": "0.8.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "HTTP Client based on Koa-like middlewares",
    "keywords": [
        "http",
        "request",
        "client",
        "ajax",
        "koa",
        "middleware"
    ],
    "homepage": "https://web-cell.dev/KoAJAX/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/KoAJAX.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/KoAJAX/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "dependencies": {
        "iterable-observer": "1.0.0-rc.0",
        "web-utility": "^3.6.5"
    },
    "peerDependencies": {
        "jsdom": "^19.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.12",
        "@babel/plugin-proposal-optional-chaining": "^7.17.12",
        "@babel/plugin-transform-typescript": "^7.17.12",
        "@types/core-js": "^2.5.5",
        "@types/jest": "^27.5.1",
        "@types/jsdom": "^16.2.14",
        "@types/node": "^14.18.18",
        "core-js": "^3.22.5",
        "cross-env": "^7.0.3",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "jsdom": "^19.0.0",
        "lint-staged": "^12.4.1",
        "microbundle": "^0.15.0",
        "open-cli": "^7.0.1",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.2",
        "typedoc": "^0.22.15",
        "typescript": "~4.6.4"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,ts,json,yml}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged && jest",
        "pack-code": "cross-env NODE_ENV=build  microbundle --name KoAJAX --external iterable-observer,web-utility --globals iterable-observer=IterableObserver,web-utility=WebUtility",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "rm -rf dist/  &&  npm run pack-code  &&  npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
