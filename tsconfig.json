{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "dist/"
    },
    "include": ["source/**/*"],
    "typedocOptions": {
        "name": "KoAJAX",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"],
        "highlightLanguages": [
            "powershell",
            "diff",
            "html",
            "json",
            "javascript",
            "jsx",
            "typescript",
            "tsx"
        ]
    }
}
